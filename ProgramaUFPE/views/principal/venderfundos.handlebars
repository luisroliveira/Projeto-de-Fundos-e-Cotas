{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Vender fundo: {{fundo.nome}}</h3>
<div class="card">
    <div class="card-body"></div>
        <form action="/principal/fundos/editvender" method="POST">
        <input type="hidden" name="id" value="{{fundo.id}}" >
            <label for="numeroCotas"> Quantas cotas deseja vender: </label>
                <input type="integer" id="numeroCotas" name="numeroCotas" placeholder="Numero de cotas" class="form-control" value="0">
            <label for="valorUnit"> Qual o valor de cada cota: </label>
                <input type="integer" id="valorUnit" name="valorUnit" placeholder="Valor unitário" class="form-control" value="{{fundo.valorUnit}}">
            <label for="dataDaConsulta">Data da operação: </label>
                <input type="date" id="dataDaConsulta" name="dataDaConsulta" placeholder="Data da consulta" class="form-control" value="{{fundo.dataDaConsulta}}">
                <br>
            <button type="submit" class="btn btn-danger">Vender fundo</button>
        </form>
    </div>
</div>
